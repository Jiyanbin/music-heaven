.courses
	.header
		display: flex
		height: 50px
		width: 100%
		background: rgba(67, 205, 128, .75)
		.inputArea
			display: inline-block
			position: relative
			flex: 1
			height: 50px
			font-size: 16px
			line-height: 22px
			.el-input
				background: rgb(67, 205, 128)
				position: absolute
				bottom: 6px
				left: 6px
		.icon-wrapper
			flex: 0 0 50px
			text-align: center
			line-height: 50px
			.el-icon-menu
				color: #fff
				width: 40px
				height: 40px
	.content
		display: flex
		.menu-left
			flex: 0 0 100px
			background: rgba(238, 233, 233, .75)
			height: 100%
			.menu-split
				height: 20px
				width: 100%
			.menu-left-item
				width: 100%
				height: 60px
				line-height: 40px
				font-size: 20px
				text-align: center
				color: rgb(139, 131, 120)
				&.active
					background: #fff
		.class-right
			flex: 1
			.class-right-item
				.class-split
					height: 28px
					line-height: 28px
					font-size: 20px
					border-left: 8px solid rgb(0, 139, 69)
					padding: 10px
					text-align: left
					color: rgb(139, 139, 122)
				.class-item
					position: relative
					padding: 10px 0
					margin: 10px 10px
					border-bottom: 1px solid rgba(139, 131, 120, .3)
					font-size: 12px
					height: 100px
					img
						display: inline-block
						vertical-align: top
					.classItemName
						display: inline-block
						vertical-align: top
						font-weight: 600
						color: rgb(139, 139, 122)
						font-size: 16px
					.classItemTime
						position: absolute
						bottom: 30px
						right: 10px
						display: inline-block
						color: rgb(205, 205, 180)
						vertical-align: center
					.classItemDifficulty
						position: absolute
						bottom: 45px
						right: 10px
						color: rgb(205, 205, 180)
						display: inline-block
						vertical-align: center
	.courseItem
		position: fixed
		top: 0
		left: 0
		background: white