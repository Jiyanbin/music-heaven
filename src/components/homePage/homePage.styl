.homePage
	.header
		display: flex
		height: 50px
		width: 100%
		background: rgba(67, 205, 128, .75)
		.inputArea
			display: inline-block
			position: relative
			flex: 1
			height: 50px
			font-size: 16px
			line-height: 22px
			.el-input
				background: rgb(67, 205, 128)
				position: absolute
				bottom: 6px
				left: 6px
		.icon-wrapper
			flex: 0 0 50px
			text-align: center
			line-height: 50px
			.el-icon-menu
				color: #fff
				width: 40px
				height: 40px
	.content
		position: relative
		.courses-list
			.courses-list-item
				position: relative
				.headline
					display: inline
					width: 100%
					height: 40px
					padding-left: 10px
					border-left: 8px solid rgb(0, 139, 69)
					text-align: left
					line-height: 40px
					font-size: 18px
					color: rgb(139, 139, 122)
				.el-icon-arrow-right
					position: absolute
					padding-top: 12px
					right: 0px
					height: 40px
					width: 40px
					color: rgb(0, 139, 69)				